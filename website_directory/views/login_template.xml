<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
	
      <template id="login_directory" name="Directory layout login" inherit_id="website.login_layout">
	    <xpath expr="t" position="replace">
	        <t t-call="website.layout">
  
  
######################  
          
	            <div class="oe_website_login_container" t-raw="0"/>
	        </t>
	    </xpath>      
		</template>
		
      <template id="login_buttons_insci" name="insci layout login buttons" inherit_id="web.login">
	    <xpath expr="//div[@class='clearfix oe_login_buttons']" position="replace">
          <div class="clearfix oe_login_buttons">
              <button type="submit" class="btn btn-dark-main">Log in</button>
          </div>
	    </xpath>      
		</template>

	</data>
</odoo>
