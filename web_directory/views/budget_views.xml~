<!-- view pesquisa -->
       <record id="view_res_budget_filter" model="ir.ui.view">
            <field name="name">cro.processo.eve.select</field>
            <field name="model">budget</field>
            <field name="arch" type="xml">
                <search string="Procurar Processo">
                   <field name="name"
                       filter_domain="[('name','ilike',self)]"/>
                   <separator/>
                   <field name="animal_id" string="Especie" filter_domain="[('animal_id','ilike', self)]"/>
                   <group expand="0" name="group_by" string="Group By">
                       <filter string="Motivo" context="{'group_by': 'motivo'}"/>
                       <filter string="Mês de Ocorrência" context="{'group_by': 'data'}"/>
                       
                       <filter string="Mês Actual" name="current_month" domain="[('data','&lt;',(context_today()+relativedelta(months=1)).strftime('%Y-%m-01')), ('data','&gt;=',time.strftime('%Y-%m-01'))]"/>
                       <filter string="Mês Anterior" name="prev_month" domain="[('data','&gt;=',(context_today()-relativedelta(months=1)).strftime('%%Y-%%m-01')),('data','&lt;',time.strftime('%%Y-%%m-01'))]"/>
                       <filter string="Três Meses" name="prev_3months" domain="[('data','&gt;=',(context_today()-relativedelta(months=3)).strftime('%%Y-%%m-01')),('data','&lt;',time.strftime('%%Y-%%m-01'))]"/>
                       <filter string="Seis Meses" name="prev_6months" domain="[('data','&gt;=',(context_today()-relativedelta(months=6)).strftime('%%Y-%%m-01')),('data','&lt;',time.strftime('%%Y-%%m-01'))]"/>
                       <filter string="Nove Meses" name="prev_9months" domain="[('data','&gt;=',(context_today()-relativedelta(months=9)).strftime('%%Y-%%m-01')),('data','&lt;',time.strftime('%%Y-%%m-01'))]"/>
                       <separator/>
                       <filter string="Ano Actual" name="current_year" domain="[('data','&lt;=', time.strftime('%Y-%m-%d')),('data','&gt;=',time.strftime('%Y-01-01'))]" help="Current Year"/>
                       <filter string="Ano Anterior" name="last_year" domain="[('data', '&gt;=' ,(context_today()-relativedelta(years=1)).strftime('%Y-01-01')),('data','&lt;=',time.strftime('%Y-01-01'))]" help="last year"/>
                   </group>
               </search>
            </field>
        </record>


